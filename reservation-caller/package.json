{
  "name": "reservation-caller",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "db:migrate": "tsx src/scripts/db-migrate.ts",
    "db:seed": "tsx src/scripts/db-seed.ts",
    "db:reset": "tsx src/scripts/db-reset.ts && npm run db:seed",
    "start:prod": "npm run build && pm2 start ecosystem.config.cjs --only reservation-caller",
    "restart:prod": "pm2 restart reservation-caller",
    "logs:prod": "pm2 logs reservation-caller"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.13.1",
    "twilio": "^5.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
